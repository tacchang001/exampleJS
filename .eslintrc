// see http://eslint.org/docs/rules/
{
  "rules": {
    // Best Practices
    "linebreak-style": [
      2,
      "unix"
    ],
    // 複数の連続した空白
    "no-multi-spaces": 2,
    // 中括弧なしの制御構文
    "curly": 2,
    // 不必要なカンマ
    "comma-dangle": 2,
    // JSDocのバリデーション
    "valid-jsdoc": 0,
    // varはスコープの先頭
    "vars-on-top": 2,
    // 中括弧の前後の改行スタイルは統一
    "brace-style": 2,
    "block-scoped-var": 2,
    "default-case": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-multi-spaces": [
      2,
      {
        "exceptions": {
          "Property": true,
          "ImportDeclaration": true,
          "VariableDeclarator": true,
          "AssignmentExpression": true
        }
      }
    ],
    "no-self-compare": 2,
    "wrap-iife": [
      2,
      "inside"
    ],
    "complexity": [
      1,
      3
    ],
    "dot-notation": 1,
    "guard-for-in": 1,
    "no-extend-native": 1,
    "no-iterator": 1,
    "no-loop-func": 1,
    "no-multi-str": 1,
    "no-process-env": 1,
    "no-proto": 1,
    "no-throw-literal": 1,
    "no-unused-expressions": 1,
    "radix": 1,
    "no-alert": 0,
    "no-extra-bind": 0,
    // Strict Mode
    "strict": 2,
    // Variables
    "no-catch-shadow": 2,
    "no-undefined": 2,
    // undefined変数
    "no-undefined": 1,
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "no-undef-init": 1,
    // Stylistic Issues
    "indent": [
      2,
      4
    ],
    "comma-style": [
      2,
      "last"
    ],
    "consistent-this": [
      2,
      "_this"
    ],
    "func-style": [
      2,
      "declaration"
    ],
    "no-nested-ternary": 2,
    "padded-blocks": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "double"
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      0,
      "never"
    ],
    "space-in-brackets": [
      0,
      "never"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "space-return-throw-case": 2,
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false
      }
    ],
    "brace-style": [
      1,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "comma-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "func-names": 0,
    "key-spacing": [
      0,
      {
        "align": "value",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "max-nested-callbacks": [
      1,
      3
    ],
    "new-cap": [
      1,
      {
        "newIsCap": true,
        "capIsNew": true
      }
    ],
    "no-lonely-if": 1,
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2
      }
    ],
    "no-trailing-spaces": 1,
    "operator-linebreak": [
      1,
      "before"
    ],
    "semi": [
      2,
      "always"
    ],
    "semi-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "space-after-keywords": [
      1,
      "always"
    ],
    "dot-location": [
      1,
      "property"
    ],
    "no-unneeded-ternary": 1,
    "lines-around-comment": [
      1,
      {
        "beforeBlockComment": false,
        "afterBlockComment": false,
        "beforeLineComment": true,
        "afterLineComment": false,
        "allowBlockStart": true
      }
    ],
    // "prefer-const": 2, // ES6
    "spaced-comment": [
      0,
      "always"
    ],
    "no-unexpected-multiline": 1,
    // "constructor-super,": 1, // ES6
    // "no-this-before-super": 1, // ES6
    "callback-return": [
      1,
      [
        "callback",
        "cb",
        "next"
      ]
    ],
    // アンダースコアで始まるまたは終わる変数やプロパティーへアクセス
    "no-underscore-dangle": 0
  },
  "env": {
    "browser": true
  },
  "extends": "eslint:recommended"
}